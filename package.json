{
  "name": "chunkify",
  "version": "1.0.0",
  "description": "Transformar em peda√ßos!",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:postgres && npm run migrations:up && next dev",
    "build": "next build",
    "test": "npm run services:up && concurrently --names Next,Jest --hide Next --kill-others --sucess command-Jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:down",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "services:wait:postgres": "node src/infra/scripts/wait-for-postgres.ts",
    "migrations:create": "node-pg-migrate --migrations-dir src/infra/migrations create",
    "migrations:up": "node-pg-migrate --migrations-dir src/infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier . --check",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.12",
    "@tailwindcss/postcss": "^4.1.5",
    "dotenv": "^16.5.0",
    "lucide-react": "^0.503.0",
    "next": "^15.3.1",
    "pg": "^8.15.6",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "swr": "^2.3.3",
    "tailwindcss": "^4.1.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.15.3",
    "@types/pg": "^8.11.14",
    "@types/react": "19.1.2",
    "concurrently": "^9.1.2",
    "eslint": "9.25.1",
    "eslint-config-next": "15.3.1",
    "jest": "^29.7.0",
    "node-pg-migrate": "^7.9.1",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3"
  }
}
