{
  "name": "chunkify",
  "version": "1.0.0",
  "description": "Transformar em peda√ßos!",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && next dev",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "migrations:create": "node-pg-migrate --migrations-dir src/infra/migrations create",
    "migrations:up": "node-pg-migrate --migrations-dir src/infra/migrations --envPath .env.development up",
    "build": "next build",
    "test": "jest",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "lint:prettier:check": "prettier . --check",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint": "next lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.5",
    "dotenv": "^16.5.0",
    "next": "^15.3.1",
    "pg": "^8.15.6",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.15.3",
    "@types/pg": "^8.11.14",
    "@types/react": "19.1.2",
    "eslint": "9.25.1",
    "eslint-config-next": "15.3.1",
    "jest": "^29.7.0",
    "node-pg-migrate": "^7.9.1",
    "prettier": "3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3"
  }
}
